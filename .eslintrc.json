{
  "env": {
    "browser": true,
    "es6": true,
    "commonjs": true
  },
  "globals": {
    "chrome": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "google"],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "react/display-name": 0,
    "object-curly-spacing": [2, "always"]
  }
}
